{{define "home"}}
{{template "common/header" .}}
<div class="ui two column centered middle aligned grid" style="height: 100%">
    <div class="center aligned column">
        <h2 class="ui teal image header">
            <div class="content">
                Tun Management
            </div>
        </h2>
        <div class="ui error message display">
            <div class="header">{{T .Site.Language "where_is_serial"}}</div>
            <p>{{T .Site.Language "login_tip"|Unescaped}}</p>
        </div>
        <form class="ui large form" method="post" action="/login">
            <div class="ui stacked segment">
                <div class="field">
                    <div class="ui left icon input">
                        <i class="user icon"></i>
                        <input required type="text" name="serial" placeholder="{{T .Site.Language "serial_number"}}">
                    </div>
                </div>
                <div class="field">
                    <div class="ui left icon input">
                        <i class="lock icon"></i>
                        <input required type="password" name="password" placeholder="{{T .Site.Language "password"}}">
                    </div>
                </div>
                <button class="ui fluid large teal submit button">{{T .Site.Language "login"}}</button>
                <br>
                <a href="https://pi.tc/oauth/sso?{{NowMS}}" rel="nofollow"
                   class="ui large teal submit button">{{T .Site.Language "oauth_login"}}</a>
                <a href="/language/zh-CN?{{NowMS}}" class="ui large teal submit button">切换成中文</a>
                <a href="/language/en-US?{{NowMS}}" class="ui large teal submit button">Switch to English</a>
            </div>
        </form>
        <div class="ui stacked segment left aligned">
        {{range $name,$client := .Clients}}
            <div class="ui labeled button" style="margin-top: 10px">
                <div class="ui basic {{$client.color}} button"><i class="{{$client.icon}} icon"></i></div>
                <a target="_blank" href="/static/clients/{{$client.file}}?{{NowMS}}"
                   class="ui basic left pointing {{$client.color}} label">
                {{$name}}
                </a>
            </div>
        {{end}}
        </div>
    </div>
</div>
{{template "common/footer" .}}
{{end}}